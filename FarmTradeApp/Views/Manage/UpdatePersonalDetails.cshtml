@model FarmTradeApp.Core.Models.ApplicationUser
@{
    ViewBag.Title = "UpdatePersonalDetails";
}

<h2>Στοιχεία Προφίλ</h2>
@using (Html.BeginForm("UpdatePersonalDetails", "manage", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(u => u.Id)
    @Html.HiddenFor(u => u.DateAccountCreated)

    <h4 class="alert-info" style="display: inline-block;">Ενημέρωση στοιχείων προφίλ</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.UserName)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.FirstName)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.LastName)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.Email)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TaxNumber)
        @Html.TextBoxFor(m => m.TaxNumber, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.TaxNumber)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber)
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.PhoneNumber)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LandlineNumber)
        @Html.TextBoxFor(m => m.LandlineNumber, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.LandlineNumber)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CompanyName)
        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.CompanyName)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.Address)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.Subject)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.County)
        @Html.TextBoxFor(m => m.County, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.County)*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PostCode)
        @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.Subject)*@
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Ενημέρωση Στοιχείων" />
        </div>
    </div>
}
